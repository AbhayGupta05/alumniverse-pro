# AlumniVerse Pro Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED - Core Application Settings
# ============================================

# NextAuth.js Configuration (Required)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-make-it-long-and-random"

# Database (Required)
# For local development, use Vercel Postgres or your PostgreSQL instance
DATABASE_URL="postgresql://username:password@localhost:5432/alumniverse_pro?schema=public"

# ============================================
# AI/ML FEATURES (Required for AI matching)
# ============================================

# OpenAI API Key (Required for AI features)
NEXT_PUBLIC_OPENAI_API_KEY="sk-your-openai-api-key-here"

# OpenAI Configuration
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# ============================================
# BLOCKCHAIN & NFT FEATURES (Optional)
# ============================================

# Web3 Configuration
NEXT_PUBLIC_WEB3_INFURA_ID="your-infura-project-id"
NEXT_PUBLIC_WEB3_NETWORK="mumbai"  # polygon testnet

# NFT Contract Addresses (Deploy your own or use test contracts)
NEXT_PUBLIC_ACHIEVEMENT_CONTRACT_ADDRESS="0x..."
NEXT_PUBLIC_BADGE_CONTRACT_ADDRESS="0x..."

# IPFS/Pinata for NFT Metadata Storage
PINATA_API_KEY="your-pinata-api-key"
PINATA_SECRET_API_KEY="your-pinata-secret-key"
PINATA_JWT="your-pinata-jwt-token"

# ============================================
# REAL-TIME FEATURES (Optional)
# ============================================

# Supabase Configuration (for real-time features)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Firebase Configuration (alternative to Supabase)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS="G-XXXXXXXXXX"
NEXT_PUBLIC_MIXPANEL_TOKEN="your-mixpanel-token"

# Error Monitoring
SENTRY_DSN="your-sentry-dsn"

# ============================================
# EXTERNAL API INTEGRATIONS (Optional)
# ============================================

# LinkedIn API (for profile sync)
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# Google APIs (for calendar integration, etc.)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Services
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# SMS Services
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# STORAGE & CDN (Optional)
# ============================================

# AWS S3 for file uploads
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="alumniverse-uploads"

# Cloudinary for image processing
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# App Environment
NEXT_PUBLIC_APP_ENV="development"
NODE_ENV="development"

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes

# Debug Flags
DEBUG_AI_MATCHING="false"
DEBUG_BLOCKCHAIN="false"
DEBUG_ANALYTICS="false"

# ============================================
# PRODUCTION DEPLOYMENT SETTINGS
# ============================================

# For production deployment, set these:
# NEXT_PUBLIC_APP_ENV="production"
# NODE_ENV="production"
# NEXTAUTH_URL="https://your-production-domain.vercel.app"

# Security Headers
# NEXT_PUBLIC_CSP_REPORT_URI="https://your-domain.report-uri.com/r/d/csp/enforce"

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features for gradual rollout
FEATURE_FLAG_VR_NETWORKING="true"
FEATURE_FLAG_NFT_ACHIEVEMENTS="true"
FEATURE_FLAG_AI_RECOMMENDATIONS="true"
FEATURE_FLAG_BLOCKCHAIN_INTEGRATION="true"
FEATURE_FLAG_REAL_TIME_CHAT="true"
FEATURE_FLAG_ADVANCED_ANALYTICS="true"
FEATURE_FLAG_GAMIFICATION="true"

# ============================================
# TESTING & DEMO SETTINGS
# ============================================

# Demo Mode (for showcasing without real integrations)
DEMO_MODE="false"
MOCK_AI_RESPONSES="false"
MOCK_BLOCKCHAIN_CALLS="false"

# Test API Keys (use for development only)
TEST_OPENAI_API_KEY="test-key-for-development"
TEST_WEB3_ENDPOINT="https://polygon-mumbai.g.alchemy.com/v2/demo"